{
  "manifest_version": 3,
  "name": "Dashboard Sidebar Extension",
  "version": "0.1.0",
  "description": "Dashboard displayed as a sidebar overlay",
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["sidePanel", "activeTab"],
  "host_permissions": ["<all_urls>"]
}
